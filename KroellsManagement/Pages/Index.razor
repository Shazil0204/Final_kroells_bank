@inject NavigationManager NavigationManager

@page "/"

<PageTitle>Management Login</PageTitle>

<div class="container" style="text-align:center;">
    <div id="LogoAndText>" style="margin-bottom: 50px;">
        <img style="height: 450px;" src="/img/FrktLogo.png" />
    </div>

    <div id="Input">
        <form name="Username" method="post" style="margin-bottom: 5px;">
            <input type="email" id="username" placeholder="Username"  /> 
        </form>
    
        <form name="Password" method="post" >
            <input type="password" id="password" placeholder="Password" />
        </form>
    
            <div id="Button" style=" margin-top: 20px; margin-bottom: 20px;">
                <button class="btn btn-primary" @onclick="NavigateToAdmin"> Sign in </button>
        </div>
    </div>
</div>



@code
{
    private void NavigateToAdmin()
    {
        NavigationManager.NavigateTo("/Admin");
    }
}
